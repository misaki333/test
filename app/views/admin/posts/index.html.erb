<h3 class="admin_post_index_title">投稿一覧</h3>

<table class="admin_post_index">

	<thead>
		<tr>
			<th>投稿日</th>
			<th>ユーザid</th>
			<th>ユーザ名</th>
			<th>観光地名</th>
		</tr>
	</thead>

	<tbody>
		<% @posts.each do |post| %>
			<tr onclick="document.location.href='<%= admin_post_path(post.id) %>'"  class="text" >
					<td><%= post.created_at.strftime("%Y年%m月%d日") %></td>
					<td><%= post.user_id %></td>
					<td><%= post.user.name %></td>
					<td><%= post.spot.name %></td>
			</tr>
		<% end %>
	</tbody>

</table>



