<div class="heart">
  <% if @spot.liked_by?(current_user) %>
    <li>
      <%= link_to spot_likes_path(@spot.id), method: :delete, remote: true do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <% end %>
    </li>
  <% else %>
    <li>
      <%= link_to spot_likes_path(@spot.id), method: :post, remote: true do %>
        <i class="fa fa-heart-o" aria-hidden="true"></i>
      <% end %>
    </li>
  <% end %>
</div>